@model EventSourcingTodo.Domain.Todo
<div class="list-group-item renameTodoPanelWrapper @if (Model.IsCompleted) { <text>list-group-item-success</text> }" data-estd-todoid="@Model.Id">
    <div class="row renameTodoPanelToggleTarget">
        <div class="col-sm-6">
            @{Html.RenderPartial("_TodoDescriptionPartial", Model); }
        </div>
        <div class="col-sm-6">
            <div class="btn-group btn-group-justified" role="group">
                <div class="btn-group">
                    <button type="button" class="btn btn-link deleteTodoBtn" aria-label="Delete" data-estd-todoid="@Model.Id">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </button>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-link moveTodoUpBtn" aria-label="Move up" data-estd-todoid="@Model.Id">
                        <span class="glyphicon glyphicon-chevron-up" aria-hidden="true"></span>
                    </button>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-link moveTodoDownBtn" aria-label="Move down" data-estd-todoid="@Model.Id">
                        <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span>
                    </button>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-link renameTodoBtn" aria-label="Rename">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>
                </div>
                @if (Model.IsCompleted)
                {
                    <div class="btn-group">
                        <button type="button" class="btn btn-link uncompleteTodoBtn" aria-label="Mark incomplete" data-estd-todoid="@Model.Id">
                            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                        </button>
                    </div>
                }
                else
                {
                    <div class="btn-group">
                        <button type="button" class="btn btn-link completeTodoBtn" aria-label="Mark complete" data-estd-todoid="@Model.Id">
                            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="row renameTodoPanelToggleTarget" style="display: none">
        <div class="col-sm-12">
            @{Html.RenderPartial("_RenameTodoFormPartial", new ChangeTodoDescriptionPostModel() { TodoId = Model.Id, Description = Model.Description });}
        </div>
    </div>
</div>