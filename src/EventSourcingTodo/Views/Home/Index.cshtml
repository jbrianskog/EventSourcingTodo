@model EventSourcingTodo.Models.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
        <form asp-controller="Home" asp-action="Index" method="post" role="form">
            <div class="form-group">
                <label asp-for="PostModel.Description" class="sr-only"></label>
                <div class="input-group">
                    <input asp-for="PostModel.Description" class="form-control" placeholder="What do you need to do?" />
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-success" aria-label="Add To-do">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                        </button>
                    </span>
                </div>
                <span asp-validation-for="PostModel.Description"></span>
            </div>
        </form>
    </div>
</div>
<br />
<div class="row">
    <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
        <ul class="list-group">
            @foreach (var todo in Model.TodoList)
            {
                <li class="list-group-item">@todo.Description</li>
            }
        </ul>
    </div>
</div>